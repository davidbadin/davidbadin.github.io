<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="Project.TapestryAdj.controller.main" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
					    <List noDataText="Loading..." id="civ_list" items="{/}">
					        <items>
					            <StandardListItem title="{Civilization}" description="{Adjustment}" icon="sap-icon://picture" type="Active"/>
					        </items>
					    </List>
					</content>
				<headerContent>
				    <Button xmlns="sap.m" id="filter_btn" activeIcon="sap-icon://filter" text="Filter"/>
				</headerContent>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>