<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="Project.TapestryAdj.controller.main" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
					    <List noDataText="Loading..." id="civ_list" items="{/}">
					        <items>
					            <StandardListItem title="{Civilization}" description="{Adjustment}" icon="sap-icon://picture" 
								type="Active" press=".onPressItem"
								visible="{= ( ${IsAdjusted} || !${settingsModel>/filterAdjusted} ) &amp;&amp;	
									( ${IsAutomaComp} || !${settingsModel>/filterAutoma} )
									? true : false }"/>
					        </items>
					    </List>
					</content>
				<headerContent>
				    <!-- <Button xmlns="sap.m" id="filter_btn" activeIcon="sap-icon://filter" text="Filter"/> -->
				</headerContent>
				<footer>
				    <Toolbar width="100%" id="toolbar1">
				        <content>
				            <ToolbarSpacer id="spacer0"/>
							<CheckBox xmlns="sap.m" class="sapUiSmallMarginBeginEnd" text="Adjusted only" selected="false" id="boxAdjusted"/>
				            <CheckBox xmlns="sap.m" class="sapUiSmallMarginBeginEnd" text="Automa compatible only" selected="false" id="boxAutoma"/>
				        </content>
				    </Toolbar>
				</footer>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>