<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="Project.RasPiDB.controller.Main" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
					    <Table noDataText="Drop column list items here and columns in the area above" id="table0" 
							items="{path: '/result'}">
					        <items>
					            <ColumnListItem type="Active" id="item0">
					                <cells>
					                    <Text text="{Id}"/>
					                    <Text text="{Name}"/>
					                    <Text text="{Rating}"/></cells>
					            </ColumnListItem>
					        </items>
					        <columns>
					            <Column id="column0">
					                <header>
					                    <Label text="Id" id="label0"/>
					                </header>
					            </Column>
					            <Column id="column1">
					                <header>
					                    <Label text="Name" id="label1"/>
					                </header>
					            </Column>
					            <Column id="column2">
					                <header>
					                    <Label text="Rating" id="label2"/>
					                </header>
					            </Column></columns></Table>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>