<core:FragmentDefinition xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Dialog id="addWordDialog" title="{i18n>addWord}">
		<content>
			<Input id="inputWord" liveChange=".onWordEnter"/>
		</content>
		<beginButton>
			<Button id="cancelButton" icon="sap-icon://cancel" text="{i18n>close}" type="Reject" press=".onCloseDialog"/>
		</beginButton>
		<endButton>
			<Button id="saveWordButton" icon="sap-icon://save" text="{i18n>save}" type="Emphasized" press=".onSaveWord" enabled="false"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>