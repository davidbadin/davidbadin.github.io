<core:FragmentDefinition xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<Dialog id="confirmDialog" title="{i18n>deleteAllWords}">
		<content>
			<Text text="{i18n>areYouSure}"/>
		</content>
		<beginButton>
			<Button icon="sap-icon://cancel" text="{i18n>cancel}" type="Default" press=".onCloseDialog"/>
		</beginButton>
		<endButton>
			<Button icon="sap-icon://delete" text="{i18n>deleteAllWords}" type="Reject" press=".onDeleteAllWordsConfirmed"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>